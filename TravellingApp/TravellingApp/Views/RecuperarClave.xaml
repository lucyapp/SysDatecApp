<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SysDatecScanApp.Views.RecuperarClave"
             Title="Recuperar clave"
             >
    <ContentPage.Content>
        <StackLayout>

            <StackLayout Padding="30"
                 VerticalOptions="Start">
                <Label Text="Nombre de usuario"
               HorizontalOptions="Start"/>
                <Entry Text="" TextChanged="Label_BindingContextChanged"  x:Name="EntryUsername"/>
                <Label Text="Email de usuario"
               HorizontalOptions="Start"/>
                <Entry Text=""
               x:Name="EntryCorreo" TextChanged="Label_BindingContextChanged"
               IsPassword="false"/>

                              
                <Button Text="Recuperar clave"
                TextColor="White"
                BackgroundColor="LightGreen"
                x:Name="ButtonRecuperarClave" 
                Clicked="ButtonRecuperarClave_Clicked"/>

                <Label x:Name="messageLabel" Text=""
                VerticalOptions="CenterAndExpand" TextColor="Red"
                HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>